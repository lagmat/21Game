<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hubner.erich.a21game.fragments.GameFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivCarta"
        android:layout_width="198dp"
        android:layout_height="302dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/as_de_espada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRecomecar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lbl_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:text="Sua pontuacao"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tvPontuacao"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tvPontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="10"
        android:textColorLink="@android:color/holo_blue_bright"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btProximaCarta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:text="Próxima carta"
        app:layout_constraintTop_toBottomOf="@+id/lbl_info"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btRecomecar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Recomeçar Jogo"
        app:layout_constraintTop_toBottomOf="@+id/btProximaCarta"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
